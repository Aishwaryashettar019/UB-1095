<% layout('layouts/boilerplate2') %>

<body class="bg-light">
  <div class="container py-5">
    <h1 class="text-center text-success mb-4">ğŸ§‘â€ğŸŒ¾ Fertilizer Vendors</h1>

    <!-- Search and Filter Form -->
    <form class="row g-3 mb-4 justify-content-center" method="GET" action="/vendors">
      <div class="col-md-3">
        <input type="text" name="fertilizer" value="<%= query.fertilizer || '' %>"
               class="form-control" placeholder="Search by fertilizer">
      </div>
      <div class="col-md-2">
        <input type="number" name="minCost" value="<%= query.minCost || '' %>"
               class="form-control" placeholder="Min Cost â‚¹">
      </div>
      <div class="col-md-2">
        <input type="number" name="maxCost" value="<%= query.maxCost || '' %>"
               class="form-control" placeholder="Max Cost â‚¹">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-success w-100">Search</button>
      </div>
      <div class="col-md-2">
        <a href="/vendors" class="btn btn-outline-secondary w-100">Reset</a>
      </div>
    </form>

    <!-- Add Vendor Button -->
    <div class="text-center mb-4">
      <a href="/vendors/new" class="btn btn-success fw-semibold">â• Add Vendor</a>
    </div>

    <!-- Vendor Listings -->
    <div class="row">
      <% if (vendors.length === 0) { %>
        <p class="text-center text-muted">No vendors found matching your criteria.</p>
      <% } else { %>
        <% vendors.forEach(v => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm border-0">
              <div class="card-body">
                <h5 class="card-title text-success"><%= v.name %></h5>
                <p><b>Fertilizer:</b> <%= v.fertilizer %></p>
                <p><b>Cost:</b> â‚¹<%= v.cost %> / kg</p>
                <p><b>Contact:</b> <%= v.contact %></p>
                <% if (v.location) { %>
                  <p><b>Location:</b> <%= v.location %></p>
                <% } %>

                  <form action="/vendors/<%= v._id %>?_method=DELETE" method="POST" class="mt-3">
    <button type="submit" class="btn btn-sm w-100" id="vendor-delete-btn"
      onclick="return confirm('Are you sure you want to delete this vendor?');">
      ğŸ—‘ï¸ Delete
    </button>
  </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</body>
</html>
