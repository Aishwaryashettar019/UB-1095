  <style>
    /* Floating Chat Button */
    .chat-icon {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: #0078ff;
      color: white;
      border: none;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 28px;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      z-index: 1000;
    }

    /* Chat Iframe Popup */
    .chat-iframe-container {
      position: fixed;
      bottom: 90px;
      right: 20px;
      width: 350px;
      height: 500px;
      display: none;
      flex-direction: column;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 25px rgba(0, 0, 0, 0.3);
      z-index: 999;
    }

    .chat-iframe-container iframe {
      width: 100%;
      height: 100%;
      border: none;
    }

    /* Close button on top-right of iframe */
    .close-btn {
      position: absolute;
      top: 5px;
      right: 10px;
      font-size: 20px;
      color: white;
      background: rgba(0, 0, 0, 0.5);
      border: none;
      border-radius: 50%;
      width: 25px;
      height: 25px;
      cursor: pointer;
      z-index: 1001;
    }
  </style>
