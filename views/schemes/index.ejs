<% layout('layouts/boilerplate2') %>
<div class="container mt-4">
  <h1 class="text-success mb-4">ğŸŒ± Government Schemes & Subsidies</h1>
  <a href="/schemes/new" class="btn btn-primary mb-3">â• Add New Scheme</a>

  <div class="row">
    <% schemes.forEach(s => { %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-success"><%= s.title %></h5>
            <p><b>Department:</b> <%= s.department %></p>
            <p><b>Subsidy:</b> <%= s.subsidy %></p>
            <p><%= s.description %></p>
            <p><b>Eligibility:</b> <%= s.eligibility %></p>
            <a href="<%= s.applyLink %>" target="_blank" class="btn btn-success btn-sm mb-2 w-100">
              ğŸ“ Apply Now
            </a>
            <div class="d-flex justify-content-between">
              <a href="/schemes/<%= s._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
              <form action="/schemes/<%= s._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger btn-sm" onclick="return confirm('Delete this scheme?')">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

