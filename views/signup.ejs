<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sign Up | CropCare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background: linear-gradient(135deg, #1a5c0e, #2a8a15, #4CAF50); min-height: 100vh; display: flex; align-items: center; justify-content: center; font-family: 'Segoe UI', sans-serif; padding: 20px; }
    .signup-card { background: white; border-radius: 24px; padding: 40px; width: 100%; max-width: 460px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
    .brand { font-size: 1.8rem; font-weight: 800; color: #2a8a15; text-align: center; margin-bottom: 8px; }
    .role-card { border: 2px solid #e0e0e0; border-radius: 12px; padding: 14px; cursor: pointer; transition: 0.2s; text-align: center; }
    .role-card:hover { border-color: #2a8a15; background: #f0f7ee; }
    .role-card.selected { border-color: #2a8a15; background: #e8f5e9; }
    .role-card .icon { font-size: 1.8rem; margin-bottom: 4px; }
    .btn-signup { background: linear-gradient(135deg, #2a8a15, #4CAF50); border: none; color: white; padding: 12px; font-weight: 600; font-size: 1rem; border-radius: 12px; width: 100%; }
    .btn-signup:hover { background: linear-gradient(135deg, #1a5c0e, #2a8a15); color: white; }
    .mic-btn { width: 40px; height: 40px; border-radius: 50%; border: none; background: #2a8a15; color: white; cursor: pointer; }
    .mic-btn.recording { background: #dc3545; animation: pulse 1s infinite; }
    @keyframes pulse { 0%,100%{box-shadow:0 0 0 0 rgba(220,53,69,0.4)} 50%{box-shadow:0 0 0 10px rgba(220,53,69,0)} }
  </style>
</head>
<body>
<div class="signup-card">
  <div class="brand">üåø CropCare</div>
  <p class="text-center text-muted small mb-4">Create your account</p>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger py-2"><i class="fa fa-exclamation-circle me-2"></i><%= error %></div>
  <% } %>

  <form action="/signup" method="POST">
    <div class="mb-3">
      <label class="form-label fw-semibold">Username (min 4 chars)</label>
      <div class="input-group">
        <input type="text" class="form-control" name="username" id="usernameInput" required placeholder="Choose a username" minlength="4">
        <button class="btn btn-outline-success mic-btn" type="button" id="micBtn" onclick="toggleVoice()"><i class="fa fa-microphone" id="micIcon"></i></button>
      </div>
      <select class="form-select form-select-sm mt-1" id="langSelect">
        <option value="en-IN">English</option><option value="hi-IN">Hindi</option><option value="te-IN">Telugu</option><option value="ta-IN">Tamil</option><option value="kn-IN">Kannada</option>
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold">Password (min 8 chars)</label>
      <input type="password" class="form-control" name="password" required placeholder="Strong password" minlength="8">
    </div>

    <div class="mb-4">
      <label class="form-label fw-semibold">I am a...</label>
      <div class="row g-2" id="roleGrid">
        <div class="col-6"><div class="role-card" onclick="selectRole('farmer',this)"><div class="icon">üåæ</div><div class="fw-semibold">Farmer</div><small class="text-muted">Buy/Sell crops</small></div></div>
        <div class="col-6"><div class="role-card" onclick="selectRole('vendor',this)"><div class="icon">üè™</div><div class="fw-semibold">Vendor</div><small class="text-muted">Sell supplies</small></div></div>
        <div class="col-6"><div class="role-card" onclick="selectRole('expert',this)"><div class="icon">üßë‚Äçüî¨</div><div class="fw-semibold">Expert</div><small class="text-muted">Give advice</small></div></div>
        <div class="col-6"><div class="role-card" onclick="selectRole('admin',this)"><div class="icon">‚öôÔ∏è</div><div class="fw-semibold">Admin</div><small class="text-muted">Manage platform</small></div></div>
      </div>
      <input type="hidden" name="role" id="roleInput" required>
      <div class="text-danger small mt-1 d-none" id="roleError">Please select a role.</div>
    </div>

    <div class="mb-3">
      <label class="form-label fw-semibold small text-muted">Email (optional)</label>
      <input type="email" class="form-control form-control-sm" name="email" placeholder="your@email.com">
    </div>

    <button type="submit" class="btn btn-signup" onclick="return validateRole()">Create Account</button>
  </form>
  <div class="text-center mt-3">
    Already have an account? <a href="/login" class="text-success fw-semibold">Login</a>
  </div>
</div>
<script>
let recognition=null,isRecording=false;
function selectRole(role,el){
  document.querySelectorAll('.role-card').forEach(c=>c.classList.remove('selected'));
  el.classList.add('selected');
  document.getElementById('roleInput').value=role;
  document.getElementById('roleError').classList.add('d-none');
}
function validateRole(){
  if(!document.getElementById('roleInput').value){
    document.getElementById('roleError').classList.remove('d-none');
    return false;
  }
  return true;
}
function toggleVoice(){
  if(!('webkitSpeechRecognition' in window)&&!('SpeechRecognition' in window)){alert('Use Chrome/Edge.');return;}
  if(isRecording){recognition.stop();return;}
  const SR=window.SpeechRecognition||window.webkitSpeechRecognition;
  recognition=new SR();recognition.lang=document.getElementById('langSelect').value;
  recognition.onstart=()=>{isRecording=true;document.getElementById('micBtn').classList.add('recording');document.getElementById('micIcon').className='fa fa-stop';};
  recognition.onresult=(e)=>{document.getElementById('usernameInput').value=e.results[0][0].transcript.trim().replace(/\s/g,'');};
  recognition.onerror=()=>stopV();recognition.onend=stopV;recognition.start();
}
function stopV(){isRecording=false;document.getElementById('micBtn').classList.remove('recording');document.getElementById('micIcon').className='fa fa-microphone';}
</script>
</body>
</html>
