<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Vendor Dashboard | CropCare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background: #fff8f0; font-family: 'Segoe UI', sans-serif; }
    .sidebar { background: linear-gradient(180deg, #e65c00, #f9a825); min-height: 100vh; color: white; padding: 20px 0; }
    .sidebar a { color: rgba(255,255,255,0.9); text-decoration: none; display: block; padding: 10px 20px; border-radius: 8px; margin: 3px 10px; transition: 0.2s; }
    .sidebar a:hover, .sidebar a.active { background: rgba(255,255,255,0.25); }
    .sidebar .brand { font-size: 1.4rem; font-weight: 700; padding: 15px 20px; border-bottom: 1px solid rgba(255,255,255,0.25); margin-bottom: 15px; }
    .stat-card { border-radius: 16px; padding: 24px; color: white; position: relative; overflow: hidden; }
    .stat-card .icon { font-size: 2.5rem; opacity: 0.3; position: absolute; right: 20px; top: 20px; }
    .data-card { background: white; border-radius: 16px; padding: 24px; box-shadow: 0 2px 15px rgba(0,0,0,0.08); }
    .mic-btn { width: 60px; height: 60px; border-radius: 50%; font-size: 1.5rem; border: none; background: #e65c00; color: white; cursor: pointer; transition: 0.3s; box-shadow: 0 4px 15px rgba(230,92,0,0.4); }
    .mic-btn.recording { background: #dc3545; animation: pulse 1s infinite; }
    @keyframes pulse { 0%,100%{box-shadow:0 0 0 0 rgba(220,53,69,0.4)} 50%{box-shadow:0 0 0 15px rgba(220,53,69,0)} }
    .flash-success { background: #d4edda; color: #155724; border: 1px solid #c3e6cb; padding: 10px 16px; border-radius: 8px; margin-bottom: 15px; }
    .flash-error { background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; padding: 10px 16px; border-radius: 8px; margin-bottom: 15px; }
  </style>
</head>
<body>
<div class="container-fluid p-0">
  <div class="row g-0">
    <div class="col-md-2 sidebar">
      <div class="brand">üåø CropCare</div>
      <div class="px-2 mb-3">
        <small class="text-white-75">Vendor Panel</small><br>
        <strong><%= user.username %></strong>
        <span class="badge bg-warning text-dark ms-1">Vendor</span>
      </div>
      <a href="/dashboard" class="active"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
      <a href="/vendors"><i class="fa fa-store me-2"></i>All Vendors</a>
      <a href="/vendors/new"><i class="fa fa-plus me-2"></i>Add Listing</a>
      <a href="/markets"><i class="fa fa-chart-line me-2"></i>Markets</a>
      <a href="/croplistings"><i class="fa fa-seedling me-2"></i>Crop Listings</a>
      <div style="margin: 8px 10px; padding: 8px 10px; background: rgba(255,255,255,0.1); border-radius: 8px; font-size: 0.78rem; color: rgba(255,255,255,0.6);">
        <i class="fa fa-lock me-1"></i>Q&A ‚Äî No access<br><small>Farmers & Experts only</small>
      </div>
      <hr style="border-color: rgba(255,255,255,0.25);">
      <a href="/logout"><i class="fa fa-sign-out-alt me-2"></i>Logout</a>
    </div>

    <div class="col-md-10 p-4">
      <h3 class="mb-1 fw-bold" style="color:#e65c00;">üè™ Vendor Dashboard</h3>
      <p class="text-muted mb-4">Manage your products and reach farmers directly</p>

      <% if (flash_success) { %><div class="flash-success"><%= flash_success %></div><% } %>
      <% if (flash_error) { %><div class="flash-error"><%= flash_error %></div><% } %>

      <div class="row g-3 mb-4">
        <div class="col-md-3">
          <div class="stat-card" style="background:linear-gradient(135deg,#e65c00,#ff9800);">
            <div class="fs-5 fw-bold"><%= stats.vendors %></div>
            <div>Total Vendors</div>
            <div class="icon"><i class="fa fa-store"></i></div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card" style="background:linear-gradient(135deg,#2a8a15,#66bb6a);">
            <div class="fs-5 fw-bold"><%= stats.listings %></div>
            <div>Crop Listings</div>
            <div class="icon"><i class="fa fa-seedling"></i></div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="stat-card" style="background:linear-gradient(135deg,#0d6efd,#42a5f5);">
            <div class="fs-5 fw-bold"><%= stats.markets %></div>
            <div>Markets</div>
            <div class="icon"><i class="fa fa-chart-line"></i></div>
          </div>
        </div>
        <div class="col-md-3">
          <a href="/vendors/new" class="btn btn-lg w-100 h-100" style="background:linear-gradient(135deg,#6f42c1,#9c27b0);color:white;border-radius:16px;">
            <i class="fa fa-plus-circle d-block fs-2 mb-1"></i>Add New Listing
          </a>
        </div>
      </div>

      <div class="row g-4">
        <!-- Voice Input -->
        <div class="col-md-5">
          <div class="data-card">
            <h5 class="fw-bold mb-1"><i class="fa fa-microphone" style="color:#e65c00;"></i> Voice Input</h5>
            <p class="text-muted small mb-3">Speak in any Indian language to fill forms!</p>
            <div class="d-flex gap-3 align-items-center mb-3">
              <button class="mic-btn" id="micBtn" onclick="toggleRecording()">
                <i class="fa fa-microphone" id="micIcon"></i>
              </button>
              <div id="micStatus" class="fw-semibold">Click mic to start</div>
            </div>
            <select class="form-select form-select-sm mb-2" id="langSelect">
              <option value="">Auto-detect</option>
              <option value="hi-IN">Hindi</option>
              <option value="te-IN">Telugu</option>
              <option value="ta-IN">Tamil</option>
              <option value="kn-IN">Kannada</option>
              <option value="mr-IN">Marathi</option>
              <option value="gu-IN">Gujarati</option>
              <option value="en-IN">English</option>
            </select>
            <textarea class="form-control" id="voiceText" rows="3" placeholder="Voice text appears here..."></textarea>
            <div class="mt-2 d-flex gap-2">
              <button class="btn btn-sm btn-outline-danger" onclick="clearVoice()"><i class="fa fa-trash"></i> Clear</button>
              <button class="btn btn-sm" style="background:#e65c00;color:white;" onclick="copyToClipboard()"><i class="fa fa-copy"></i> Copy</button>
            </div>
          </div>
        </div>

        <!-- My Listings -->
        <div class="col-md-7">
          <div class="data-card">
            <h5 class="fw-bold mb-3"><i class="fa fa-list text-warning me-2"></i>Recent Vendor Listings</h5>
            <% if(vendorListings.length > 0) { %>
              <% vendorListings.forEach(v => { %>
                <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                  <div>
                    <div class="fw-semibold"><%= v.name %></div>
                    <small class="text-muted"><%= v.fertilizer %> ¬∑ <%= v.location || 'N/A' %></small>
                  </div>
                  <div>
                    <span class="badge bg-warning text-dark">‚Çπ<%= v.cost %></span>
                    <span class="badge bg-light text-dark ms-1"><%= v.contact %></span>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-muted">No listings yet. <a href="/vendors/new">Add one!</a></p>
            <% } %>
            <a href="/vendors" class="btn btn-warning btn-sm mt-3">View All Vendors</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
let recognition = null, isRecording = false;
function toggleRecording() {
  if (!('webkitSpeechRecognition' in window) && !('SpeechRecognition' in window)) { alert('Use Chrome/Edge for voice input.'); return; }
  if (isRecording) { recognition.stop(); return; }
  const SR = window.SpeechRecognition || window.webkitSpeechRecognition;
  recognition = new SR();
  recognition.continuous = true; recognition.interimResults = true;
  recognition.lang = document.getElementById('langSelect').value || 'en-IN';
  recognition.onstart = () => { isRecording=true; document.getElementById('micBtn').classList.add('recording'); document.getElementById('micIcon').className='fa fa-stop'; document.getElementById('micStatus').textContent='üî¥ Listening...'; };
  recognition.onresult = (e) => { let t=''; for(let i=0;i<e.results.length;i++) t+=e.results[i][0].transcript; document.getElementById('voiceText').value=t; };
  recognition.onerror = (e) => { document.getElementById('micStatus').textContent='Error: '+e.error; stopRec(); };
  recognition.onend = stopRec;
  recognition.start();
}
function stopRec() { isRecording=false; document.getElementById('micBtn').classList.remove('recording'); document.getElementById('micIcon').className='fa fa-microphone'; document.getElementById('micStatus').textContent='Done! Text captured.'; }
function clearVoice() { document.getElementById('voiceText').value=''; document.getElementById('micStatus').textContent='Click mic to start'; }
function copyToClipboard() { navigator.clipboard.writeText(document.getElementById('voiceText').value).then(()=>alert('Copied!')); }
</script>
</body>
</html>
