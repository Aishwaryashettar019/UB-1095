<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login | CropCare</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body { background: linear-gradient(135deg, #1a5c0e, #2a8a15, #4CAF50); min-height: 100vh; display: flex; align-items: center; justify-content: center; font-family: 'Segoe UI', sans-serif; }
    .login-card { background: white; border-radius: 24px; padding: 40px; width: 100%; max-width: 420px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
    .brand { font-size: 1.8rem; font-weight: 800; color: #2a8a15; text-align: center; margin-bottom: 8px; }
    .mic-btn { width: 44px; height: 44px; border-radius: 50%; border: none; background: #2a8a15; color: white; cursor: pointer; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
    .mic-btn.recording { background: #dc3545; animation: pulse 1s infinite; }
    @keyframes pulse { 0%,100%{box-shadow:0 0 0 0 rgba(220,53,69,0.4)} 50%{box-shadow:0 0 0 10px rgba(220,53,69,0)} }
    .voice-section { background: #f0f7ee; border-radius: 12px; padding: 14px; margin-bottom: 16px; }
    .btn-login { background: linear-gradient(135deg, #2a8a15, #4CAF50); border: none; color: white; padding: 12px; font-weight: 600; font-size: 1rem; border-radius: 12px; width: 100%; }
    .btn-login:hover { background: linear-gradient(135deg, #1a5c0e, #2a8a15); color: white; }
  </style>
</head>
<body>
<div class="login-card">
  <div class="brand">ðŸŒ¿ CropCare</div>
  <p class="text-center text-muted small mb-4">Smart Farming Platform</p>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="alert alert-danger py-2"><i class="fa fa-exclamation-circle me-2"></i><%= error %></div>
  <% } %>
  <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success py-2"><i class="fa fa-check-circle me-2"></i><%= success %></div>
  <% } %>

  <div class="voice-section">
    <div class="d-flex align-items-center gap-2 mb-2">
      <button class="mic-btn" id="micBtn" onclick="toggleVoice()">
        <i class="fa fa-microphone" id="micIcon"></i>
      </button>
      <div>
        <div class="fw-semibold small">Voice Login (any language)</div>
        <div class="text-muted" style="font-size:0.75rem;" id="voiceStatus">Tap mic, say your username</div>
      </div>
    </div>
    <select class="form-select form-select-sm" id="langSelect">
      <option value="en-IN">English</option>
      <option value="hi-IN">Hindi</option>
      <option value="te-IN">Telugu</option>
      <option value="ta-IN">Tamil</option>
      <option value="kn-IN">Kannada</option>
      <option value="mr-IN">Marathi</option>
    </select>
  </div>

  <form action="/login" method="POST">
    <div class="mb-3">
      <label class="form-label fw-semibold">Username</label>
      <input type="text" class="form-control" name="username" id="usernameInput" required placeholder="Enter username">
    </div>
    <div class="mb-4">
      <label class="form-label fw-semibold">Password</label>
      <input type="password" class="form-control" name="password" required placeholder="Enter password">
    </div>
    <button type="submit" class="btn btn-login">Login</button>
  </form>
  <div class="text-center mt-3">
    <a href="/forgot" class="text-muted small">Forgot Password?</a>
    <span class="text-muted mx-2">|</span>
    <a href="/signup" class="text-success small fw-semibold">Create Account</a>
  </div>
  <div class="text-center mt-2"><a href="/test" class="text-muted small">Back to Home</a></div>
</div>
<script>
let recognition=null,isRecording=false;
function toggleVoice(){
  if(!('webkitSpeechRecognition' in window)&&!('SpeechRecognition' in window)){alert('Use Chrome/Edge.');return;}
  if(isRecording){recognition.stop();return;}
  const SR=window.SpeechRecognition||window.webkitSpeechRecognition;
  recognition=new SR();recognition.lang=document.getElementById('langSelect').value;
  recognition.onstart=()=>{isRecording=true;document.getElementById('micBtn').classList.add('recording');document.getElementById('micIcon').className='fa fa-stop';document.getElementById('voiceStatus').textContent='Listening...';};
  recognition.onresult=(e)=>{document.getElementById('usernameInput').value=e.results[0][0].transcript.trim();document.getElementById('voiceStatus').textContent='Got it!';};
  recognition.onerror=()=>stopV();recognition.onend=stopV;recognition.start();
}
function stopV(){isRecording=false;document.getElementById('micBtn').classList.remove('recording');document.getElementById('micIcon').className='fa fa-microphone';}
</script>
</body>
</html>
